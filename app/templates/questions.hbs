<div class="y-questions">
  <div class="row">
    <div class="small-6 columns">
      <ul class="y-questions__ul">
          {{#each itemController="question"}}
            <li class="y-questions__li">
                <span class="y-questions__text">
                    {{#link-to 'question' this}}{{text}}{{/link-to}}
                </span>

                <span class="y-author y-questions__author">
                    {{author-name author=author}}
                </span>

                {{#if answer}}
                  <span {{bind-attr class=":label :radius isAnswerCorrect:success isAnswerIncorrect:alert"}}>
                      {{answer}}
                  </span>
                {{else}}
                  <span class="label secondary radius">
                      waiting
                  </span>
                {{/if}}
            </li>
          {{/each}}
      </ul>
    </div>

    <div class="small-6 columns">
        {{outlet}}
    </div>
  </div>
</div>