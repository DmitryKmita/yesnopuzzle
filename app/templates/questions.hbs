<div class="y-questions">
  <ul class="y-questions__ul">
      {{#each}}
        <li class="y-questions__li">
          <div class="y-questions__text">
              {{#link-to 'question' this}}{{text}}{{/link-to}} <span
              class="y-questions__author">by {{author.name}} {{author.surname}}</span>
          </div>

          <div {{bind-attr class=":y-questions__answer answer::y-questions__answer_waiting"}}>
              {{#if answer}}
                  {{answer}}
              {{/if}}
          </div>
        </li>
      {{/each}}
  </ul>
</div>

{{outlet}}